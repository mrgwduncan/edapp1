<div class="container">
    <div class="creatureselection">
    <h2>Creature selection</h2>
    <form action="/" method="POST">
    <label> Select creature by name </label>
        <select name='name'>
            {{#each creature}}
                <option value="{{name}}">{{name}}</option>
            {{/each}}
            <option selected="selected">None</option>
        </select>
        &nbsp&nbsp&nbsp
        <label> Select creature by type</label>
        <select name='type'>
            {{#each type}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
            <option selected="selected">None</option>
        </select>
    <br>
    <br>
     <input type="submit" value="Submit">  
    </form>
    </div>
</div>
